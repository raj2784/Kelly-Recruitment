@model UserClaimsViewModel
@{
    ViewData["Title"] = "ManageUserClaims";
}

<form method="post">
    <div class="card mt-3">
        <div class="card-header">
            <h3>Manage User Claims</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimsType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimsType
                    </label>
                </div>
            }
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@Model.UserId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
