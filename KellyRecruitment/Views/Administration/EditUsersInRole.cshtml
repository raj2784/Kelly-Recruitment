@model List<EditUsersInRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";
    var roleId = ViewBag.roleId;
}

<h3 class="mt-3">Edit Users from this Role</h3>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3> Add or Remove users form this Role</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />

                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit" style="width:auto">Update</button>
            <a asp-action="EditRole" asp-route-Id="@roleId" asp-controller="administration"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>