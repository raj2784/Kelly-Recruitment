@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Grid View";
}


<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath ?? "NoImage.jpg");

        <div class="card mt-3 mb-3" style="min-width: 18rem; max-width:30.5%; height:auto">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@employee.Id"
                   class="btn btn-danger m-1" onclick="return confirm('are you sure you want to delete @employee.Name record??')">Delete</a>
            </div>
        </div>
    }
</div>